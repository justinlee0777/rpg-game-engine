{
    "name": "rpg-game-engine",
    "version": "1.0.0",
    "description": "Engine for a hypothetical RPG game.",
    "scripts": {
        "install-deps": "npm ci && npm --prefix ./packages/engine ci && npm --prefix ./packages/ui-implementation ci",
        "build": "webpack --mode=production",
        "build:dev": "tsc && webpack --mode=development",
        "format": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "rpg-game-engine"
    },
    "private": true,
    "workspaces": [
        "packages/engine",
        "packages/ui-implementation"
    ],
    "author": "Justin Lee",
    "license": "ISC",
    "devDependencies": {
        "copy-webpack-plugin": "^10.2.4",
        "html-webpack-plugin": "^5.5.0",
        "prettier": "^2.8.4",
        "ts-loader": "^9.2.8",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typescript": "^4.6.2",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2"
    }
}
